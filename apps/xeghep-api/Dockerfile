# Run the container with `docker run -p 3000:3000 -t xeghep-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system xeghep-api && \
          adduser --system -G xeghep-api xeghep-api

COPY apps/xeghep-api/dist xeghep-api/
RUN chown -R xeghep-api:xeghep-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix xeghep-api --omit=dev -f install

CMD [ "node", "xeghep-api" ]
