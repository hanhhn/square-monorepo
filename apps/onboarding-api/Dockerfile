# Run the container with `docker run -p 3000:3000 -t onboarding-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system onboarding-api && \
          adduser --system -G onboarding-api onboarding-api

COPY apps/onboarding-api/dist onboarding-api/
RUN chown -R onboarding-api:onboarding-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix onboarding-api --omit=dev -f install

CMD [ "node", "onboarding-api" ]
