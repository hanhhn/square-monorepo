{
  "name": "square-api",
  "$schema": "../../node_modules/nx/schemas/nx-schema.json",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=development"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "square-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "square-api:build:development"
        },
        "production": {
          "buildTarget": "square-api:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/square-api/Dockerfile . -t square-api"
    },
    "migration": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "generate",
      "options": {
        "command": ""
      },
      "configurations": {
        "generate": {
          "command": "ts-node scripts/generate-migration.ts --name={args.name}"
        },
        "run": {
          "command": "ts-node ./node_modules/typeorm/cli.js migration:run -d apps/square-api/typeorm.config.ts"
        },
        "revert": {
          "command": "ts-node ./node_modules/typeorm/cli.js migration:revert -d apps/square-api/typeorm.config.ts"
        }
      }
    },
    "say-hello": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -p -e 'Date.now()'"
      }
    }
  }
}
